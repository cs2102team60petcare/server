                            <li><a href="../logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
    
    <div class="container">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Unassigned <b>Requests</b></h2>

                        </div>
                        <!-- previous and next buttons -->
                        <div> 

                        </div>
                        </div>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Rid</th>
                            <th>User_id</th>
                            <th>Created</th>
                            <th>Message</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i =0 ; i< unassignedRequests.length ; i++) { %>
                            <tr>
                                <td><%=unassignedRequests[i].request_id     %></td>
                                <td><%=unassignedRequests[i].user_id        %></td>
                                <td><%=unassignedRequests[i].created        %></td>
                                <td><%=unassignedRequests[i].message        %></td>
                                <td>
                                    <button type="button" class="btn btn-info assign"><i class="fa fa-plus"></i>Assign</button>
                                </td>
                            </tr>
            
                        <% } %>

                    </tr>
                    </tbody>
                </table>
            </div>
    </div>    
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12"><h2>My <b>Requests</b></h2> </div>

                    <div class="form-group"> 
                            <label for="usr"><br>Request_id:</label>
                            <input type="number" class ="search" id = "searchID">
                            <label for="usr">Offset:</label>
                            <input type="number" class = "search" id = "offset">
                            <label for="usr">Show:</label>
                            <input type="number" class ="search" id = "limit">
                    </div>
                    
                </div>
                
            </div>
            <table class="table table-bordered" id="table-requests">
                <thead>
                    <tr>
                        <th>Request_id</th>
                        <th>User_id</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Message</th>
                        <th>Justification</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i =0 ; i< requests.length ; i++) { %>
                        <tr>
                            <td><%=requests[i].request_id     %></td>
                            <td><%=requests[i].user_id        %></td>
                            <td><%=requests[i].status         %></td>
                            <td><%=requests[i].created        %></td>
                            <td><%=requests[i].message        %></td>
                            <td>NIL</td>
                            <td>
                                <a class="add" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
                                <a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                            </td>
                        </tr>
        
                    <% } %>

                </tbody>
            </table>
        </div>
    </div>

    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12"><h2>My <b>Past Solved Requests</b></h2> </div>
                </div>
            </div>
            <table class="table table-bordered" id="table-past-requests">
                <thead>
                    <tr>
                        <th>Request_id</th>
                        <th>User_id</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Message</th>
                        <th>Justification</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i =0 ; i< pastRequests.length ; i++) { %>
                        <tr>
                            <td><%=pastRequests[i].request_id     %></td>
                            <td><%=pastRequests[i].user_id        %></td>
                            <td><%=pastRequests[i].status         %></td>
                            <td><%=pastRequests[i].created        %></td>
                            <td><%=pastRequests[i].message        %></td>
                            <td><%=pastRequests[i].justification  %></td>
                        </tr>
        
                    <% } %>

                </tbody>
            </table>
        </div>
    </div>
    <div class="container">

        <h1>Query database</h1>
        <input type="text" class="form-control-query" name="query"></input>
        <button id="SendQueryBtn">Send Query</button>
        <textarea id = "results-query"
            rows = "3"
            cols = "80">Your Query Results will be showned here</textarea>
    </div>

    <div id="chartContainer" style="height: 270px; width: 80%; margin: 0px auto;"></div>
