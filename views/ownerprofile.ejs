    <div class="container">
        <div class="row">
    
            <section class="content">
                <h1>My Bids</h1>
                <!-- <div class="col-lg-11 col-lg-offset-1">
                    <div class="panel panel-default">
                        <div class="panel-body"> -->
                            <div class="pull-right">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success btn-filter" data-target="2">Successful</button>
                                    <button type="button" class="btn btn-warning btn-filter" data-target="1">Pending</button>
                                    <button type="button" class="btn btn-danger btn-filter" data-target="0">Rejected</button>
                                </div>
                            </div>
                            <div class="pull-left">
                                <div class="add-btn">
                                    <button type="button" class="btn btn-info add-new-bid"><i class="fa fa-plus"></i> Add New Bid</button>
                                </div>
                            </div>
                            <div class="table-container">
                                <table class="table table-bids" id="bids">
                                    <thead>
                                        <tr>
                                            <th>bid_id</th>
                                            <th>pid_id</th>
                                            <th>service_id</th>
                                            <th>Caretaker</th>
                                            <th>Offered</th>
                                            <th>Bid Status</th>
                                            <th>Starting</th>
                                            <th>Ending</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% for(var i=0; i < bids.length; i++) { %>
                                        <tr id="bid" data-status="<%=bids[i].status%>">
                                            <td ><%=bids[i].bid_id    %></td>
                                            <td ><%=bids[i].pet_id    %></td>
                                            <td ><%=bids[i].service_id    %></td>
                                            <td ><%=bids[i].name    %></td>
                                            <td ><%=bids[i].money    %></td>
                                            <td ><%=bids[i].status    %></td>
                                            <td ><%=bids[i].starting    %></td>
                                            <td ><%=bids[i].ending    %></td>
                                            <td > 
                                                <a class="add bid" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
                                                <a class="delete bid" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                            </td>
                                        </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        <!-- </div>
                    </div>
                </div> -->
            </section>
            
        </div>
    </div>

    <div class="container">
            <div class="row">
        
                <section class="content">
                    <h1>My Pets</h1>
                    <div class="col-lg-10 col-lg-offset-1">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="table-container">
                                    <div class="pull-left">
                                        <div class="add-btn">
                                            <button type="button" class="btn btn-info add-new-pet"><i class="fa fa-plus"></i> Add New Pet</button>
                                        </div>
                                    </div>

                                    <table class="table table-pets">
                                            <thead>
                                                <tr>
                                                    <th>Pid</th>
                                                    <th>Name</th>
                                                    <th>Bio</th>
                                                    <th>Type</th>
                                                    <th>Born</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <% for(var i=0; i < pets.length; i++) { %>
                                                <tr data-status="<%=pets[i].status%>">
                                                    <td><%=pets[i].pet_id    %></td>
                                                    <td><%=pets[i].name    %></td>
                                                    <td><%=pets[i].biography    %></td>
                                                    <td><%=pets[i].type    %></td>
                                                    <td><%=pets[i].born    %></td>
                                                    <td>
                                                        <a class="add pet" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
                                                        <a class="edit pet" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                                        <a class="update pet" title="Update" data-toggle="tooltip"><i class="material-icons">add</i></a>
                                                        <a class="delete pet" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>

                                                    </td>
                                                </tr>
                                            <% } %>
                                            </tbody>
                                        </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                
            </div>
    </div>

    <div class="container">
            <div class="row">
        
                <section class="content">
                    <h1>Task History</h1>
                    <div class="col-lg-10 col-lg-offset-1">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="table-container">
                                    <table class="table table-tasks">
                                            <thead>
                                                <tr>
                                                    <th>Task ID</th>
                                                    <th>Task Status</th>
                                                    <th>Caretaker Name</th>
                                                    <th>Phone</th>
                                                    <th>Starting</th>
                                                    <th>Ending</th>
                                                    <th>Money</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <% for(var i=0; i < tasks.length; i++) { %>
                                                <tr data-status="<%=tasks[i].status%>">
                                                    <td><%=tasks[i].task_id    %></td>
                                                    <td><%=tasks[i].status      %></td>
                                                    <td><%=tasks[i].caretakername    %></td>
                                                    <td><%=tasks[i].phone    %></td>
                                                    <td><%=tasks[i].starting    %></td>
                                                    <td><%=tasks[i].ending    %></td>
                                                    <td><%=tasks[i].money    %></td>
                                                    <td>
                                                        <button class="ReviewBtn">Review</button>
                                                    </td>
                                                </tr>
                                            <% } %>
                                            </tbody>
                                        </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                
            </div>
    </div>

    <div class="container">
    <div class="dialog" id="myReviewDialog">
        <h1>Review Caretaker</h1>
        <h3 id="careTakerName"></h2>

        <textarea id = "careTakerReviewForm" placeholder="Please leave a review here"></textarea>

          <!-- Rating Stars Box -->
        <div class='rating-stars text-center'>
            <ul id='stars'>
            <li class='star' title='Poor' data-value='1'>
                <i class='fa fa-star fa-fw'></i>
            </li>
            <li class='star' title='Fair' data-value='2'>
                <i class='fa fa-star fa-fw'></i>
            </li>
            <li class='star' title='Good' data-value='3'>
                <i class='fa fa-star fa-fw'></i>
            </li>
            <li class='star' title='Excellent' data-value='4'>
                <i class='fa fa-star fa-fw'></i>
            </li>
            <li class='star' title='WOW!!!' data-value='5'>
                <i class='fa fa-star fa-fw'></i>
            </li>
            </ul>
        </div>


        <div class='success-box'>
                <div class='clearfix'></div>
                <div style="text-align: center"><img alt='tick image' width='32' src='data:image/svg+xml;utf8;base64,'/></div>
                <div class='text-message'></div>
                <div class='clearfix'></div>
        </div>

        <input type="button" value="Close" id="btnCloseReview">

    </div>
    </div>

